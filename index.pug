extend ./views/layout/layout
block content 
   section.top-tour 
      .container
         h2.heading Top Bangkok Tours
         .tour-list
            +tourItem(
               'https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=821&q=80',
               'From $40',
               'Thailands Ayutthaya Temples Cruise from Bangkok',
               4.8,
               15,
               '9 hours',
               60)
            +tourItem(
               'https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80',
               'From $60',
               'FLoating Markets Day Trip from Bangkok',
               4.5,
               30,
               '15 hours',
               80)
            +tourItem(
               'https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=383&q=80',
               'From $50',
               'Bangkok Dinner Cruise on the Chao Phraya River',
               4.1,
               50,
               '6 hours',
               100)

   section.popular-things 
      .container
         h2.heading Popular things to do in Bangkok
         .popular-list 
            - var n = 0;
            while n < 4
               - n++
               +popularItem('https://source.unsplash.com/random?travel-horizontal', 'Sep 28 10:00 AM - 1:00 PM', 'The Grand Palace The Grand Palace The Grand Palace', 4.8, 12)

   section.gems 
      .container 
         h2.heading Hidden gems in Bangkok
         .gem-list 
            each img in ['https://images.unsplash.com/photo-1682687981922-7b55dbb30892?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1471&q=80','https://images.unsplash.com/photo-1682685797208-c741d58c2eff?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80','https://images.unsplash.com/photo-1505832018823-50331d70d237?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=908&q=80', 'https://images.unsplash.com/photo-1473625247510-8ceb1760943f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=811&q=80', 'https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80'] 
               .gem-item 
                  img(src=img, alt="Travel")

   section.diamond 
      .container 
         h2.heading Hidden gems in Bangkok
         .diamond-list 
            each img in ['https://images.unsplash.com/photo-1682687981922-7b55dbb30892?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1471&q=80','https://images.unsplash.com/photo-1682685797208-c741d58c2eff?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80','https://images.unsplash.com/photo-1505832018823-50331d70d237?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=908&q=80', 'https://images.unsplash.com/photo-1473625247510-8ceb1760943f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=811&q=80'] 
               .diamond-item 
                  .diamond-image
                     //- .overlay 
                     img(src=img, alt="Travel")
                     .diamond-content 
                        h3.diamond-content-title Bangkok Trip
                        span.diamond-content-time 27 Sep, 2020
         a.button.diamond-button Explore All
   